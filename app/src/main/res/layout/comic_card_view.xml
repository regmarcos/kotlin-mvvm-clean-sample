<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/comic_card_view_dimen"
    android:layout_height="@dimen/comic_card_view_dimen"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/margin_card_view_comic"
    android:layout_marginRight="@dimen/margin_card_view_comic"
    android:layout_marginBottom="@dimen/margin_bottom_card_view_comic">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar_card_view_comic"
        android:layout_gravity="center_vertical"/>
    <ImageView
        android:id="@+id/thumbnail_comic_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"/>
</androidx.cardview.widget.CardView>