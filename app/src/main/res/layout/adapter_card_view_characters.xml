<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_view_height"
    app:cardCornerRadius="@dimen/corner_radius_card_view"
    tools:backgroundTint="@color/background_card_view"
    app:cardElevation="@dimen/elevation_card_view">

    <ImageView
        android:id="@+id/card_view_character_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/card_view_character_name"
        android:text="@string/name"
        style="@style/MarvelTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>
</androidx.cardview.widget.CardView>